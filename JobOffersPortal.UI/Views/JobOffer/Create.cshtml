@model CreateJobOfferMvcViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Utwórz</h1>

<h4 class="text-center">Oferta Pracy</h4>
<hr />

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>       
            <div class="form-group">
                @Html.DisplayName("Stanowisko")
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Wynagrodzenie")                
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
     
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
