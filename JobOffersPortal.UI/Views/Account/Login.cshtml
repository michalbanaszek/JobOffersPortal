@model LoginMvcViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="login-page">

    <div class="login-page-left">
        <div class="text-center">
            <h1 class="text-center">Aplikacja ofert pracy</h1>
            <hr />
            <p class="text-muted text-center mt-5">Dodawanie, modyfikowanie i usuwanie ofert pracy.</p>
        </div>
    </div>

    <div class="login-page-right">
        <h2 class="text-center">@ViewBag.Title.</h2>
        <br />
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, true, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="text-center">Use a local account to log in.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group offset-md-2 col-md-8">
                    @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })
                    <div>
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
               <div class="form-group offset-md-2 col-md-8">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group offset-md-2 col-md-8">
                    <div>
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="form-group offset-md-2 col-md-8">
                    <div>
                        <input type="submit" value="Log in" class="btn btn-primary btn-block" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>



